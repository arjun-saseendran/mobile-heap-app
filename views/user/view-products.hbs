                        <img src="/product-images/{{this._id}}.jpeg" class="card-img-top"
                             style="width: 100%; height: 350px" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <h5 class="card-title">â‚¹{{this.price}}</h5>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>


